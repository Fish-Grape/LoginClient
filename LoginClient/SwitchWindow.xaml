<Window x:Class="LoginClient.SwitchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginClient"
        mc:Ignorable="d"
        Title="SwitchWindow" Height="250" Width="300">
    <Grid>
        <Button Content="扫码登录" HorizontalAlignment="Left" Margin="120,96,0,0" VerticalAlignment="Top" Click="QRCode_Click"/>
        <Label Content="Bilibili" HorizontalAlignment="Left" Margin="120,45,0,0" VerticalAlignment="Top"/>
        <Button Content="账号登录" HorizontalAlignment="Left" Margin="120,151,0,0" VerticalAlignment="Top" Click="Account_Click"/>
        <TextBlock Name="loginTip" Visibility="Hidden" HorizontalAlignment="Left" Margin="120,192,0,0" TextWrapping="Wrap" Foreground="Red" Text="登录失败" VerticalAlignment="Top" RenderTransformOrigin="0.128,0.262" Width="52"/>

    </Grid>
</Window>
